<% content_for :style do %>
  <%= stylesheet_link_tag    'sea_tours' %>
<% end %>

<%= render 'shared/navbar' %>
<p id="notice"><%= notice %></p>

<div class="container">

  <p class="path-history">
    <%= link_to 'Главная', root_path %> / <%= link_to "Экскурсии на Пхукете", '#' %> / <%= link_to @land_tour.title, land_tour_path(@land_tour) %>
  </p>

  <h1>
    <%= @land_tour.title %>
  </h1>

  <div class="row image-container">
    <div class="col-8">

      <div class="fotorama" data-navposition="bottom" data-nav="thumbs" click='true' allowfullscreen='true' >
        <% @land_tour.images.each do |image| %>
          <%= image_tag image.url %>
        <% end %> 
      </div>

      <div class="short-content">
        <h2>Описание:</h2>
        <p>
          <%= @land_tour.short_content %>
        </p>
        <a href="javascript:;" class="full_content_show">Читать больше</a>
      </div>
      <div class="full-content">
        <p><%= @land_tour.content.html_safe %></p>
        <a href="javascript:;" class="full_content_hide">Скрыть</a>
      </div>

      <div class="tour-program">
        <h2>Программа тура:</h2>
        <ul>
          <div class="vertical-line"></div>
          <% @land_tour.tour_program.split(',').each do |point| %>
            <li>
              <%= show_svg 'point.svg' %>
              <%= point %>
            </li>
          <% end %>
        </ul>
      </div>

      <div class="row">
        <div class="col-6 tour-included">
          <h2>Что включено:</h2>
          <ul>
            <% @land_tour.included.split(',').each do |point| %>
              <li>
                <%= show_svg 'checkmark.svg' %>
                <%= point %>
              </li>
            <% end %>
          </ul>
        </div>
        <div class="col-6 tour-necessary">
          <h2>Что брать с собой?</h2>
          <ul>
            <% @land_tour.necessary.split(',').each do |point| %>
              <li>
                <%= show_svg 'checkmark.svg' %>
                <%= point %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-4">

      <!-- <div class="row price-container">
        <div class="col-4 text-right">
          <p class="adult-price">
            <%= image_tag 'user.svg' %>
            B <%= @land_tour.adult_price %>
          </p>
        </div>
        <div class="col-4 text-center">
          <p class="child-price">
            <%= image_tag 'kids-couple.svg' %>
            B <%= @land_tour.child_price %>
          </p>
        </div>
        <div class="col-4 text-left">
          <button data-toggle="modal" data-target="#orderTour" class="orderTourButtonShow" data-title="<%= @land_tour.title %>" data-adult="<%= @land_tour.adult_price %>" data-productType="LandTour" data-productId="<%= @land_tour.id %>" data-child="<%= @land_tour.child_price %>">Заказать</button> -->

          <!-- The Modal Order Tour -->
          <%#= render partial: 'shared/order_tour', :locals => { product_type: "LandTour", product_id: @land_tour.id} %>
          <!-- End Modal Order Tour 
        </div>
      </div> -->

      <div class="form-container">
        <%= render partial: 'shared/order_tour_form', :locals => { tour: @land_tour, product_id: @land_tour.id} %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="section-title-17 text-center col-12">
      <h2 class="review-title">
         Отзывы
      </h2>
    </div>
    <div class="col-7">
      <%= render partial: 'shared/comment_show', :locals => { comments: @comments } %>
    </div>
    <div class="col-5">
      <%= render partial: 'shared/comment_form', :locals => { product_type: "LandTour", product_id: @land_tour.id} %>
    </div>
  </div>
</div>
<%= render "shared/footer" %>
