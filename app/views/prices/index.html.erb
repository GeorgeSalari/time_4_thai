<div class="container price-container">
  <h1 class="text-center">Прайс</h1>
  <h2>Морские туры</h2>
  <%= table_for @sea_tours, :table_html => { :class => "table table-hover table-bordered price-table" },
                        :sortable => true,
                        :data_row_html => {
                          :id => lambda { |sea_tour| "sea_tour-#{sea_tour.id}" }} do |table| %>

    <% table.column :title, :header => "Название тура", :formatter => lambda { |title| title.upcase }  %>
    <% table.column :short_content, :header => "Описаине" %>
    <% table.column :adult_price, :header => "Цена на взрослого" %>
    <% table.column :child_price, :header => "Цена на ребенка" %>

  <% end %>

